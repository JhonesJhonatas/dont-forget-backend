{
  "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "rootDir": "./",
      "baseUrl": "./src",
      "outDir": "./dist",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
  }
}